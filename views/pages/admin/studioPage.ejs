                  <!-- Modal Create Data -->
                  <div class="modal fade" id="createModal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">Vertically Centered</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <!-- Floating Labels Form -->
                          <form class="row g-3">
                            <div class="col-md-12">
                              <div class="form-floating">
                                <input type="text" class="form-control" id="floatingImage" placeholder="Gambar Studio">
                                <label for="floatingImage">Gambar Studio</label>
                              </div>
                            </div>
                            <div class="col-md-12">
                              <div class="form-floating">
                                <input type="text" class="form-control" id="floatingName" placeholder="Nama Studio">
                                <label for="floatingName">Nama Studio</label>
                              </div>
                            </div>
                            <div class="col-12">
                              <div class="form-floating mb-3">
                                <select class="form-select" id="floatingCategory" aria-label="Kategori Studio">
                                  <option selected value="Studio Photography">Studio Photography</option>
                                  <option value="Studio Music">Studio Music</option>
                                  <option value="Studio Podcast">Studio Podcast</option>
                                  <option value="Studio Recording">Studio Recording</option>
                                </select>
                                <label for="floatingCategory">Kategori Studio</label>
                              </div>
                            </div>
                            <div class="col-md-12">
                              <div class="form-floating">
                                <input type="text" class="form-control" id="floatingDesc" placeholder="Deskripsi">
                                <label for="floatingDesc">Deskripsi</label>
                              </div>
                            </div>
                            <div class="col-12">
                              <div class="form-floating">
                                <textarea class="form-control" placeholder="Alamat" id="floatingAlamat"
                                  style="height: 100px;"></textarea>
                                <label for="floatingAlamat">Alamat</label>
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div class="col-md-12">
                                <div class="form-floating">
                                  <input type="number" class="form-control" id="floatingHarga" placeholder="Harga">
