                  <table class="table datatable">
                    <thead>
                      <tr class="text-center">
                        <!-- <th scope="col">Studio ID</th> -->
                        <th scope="col">Gambar</th>
                        <th scope="col">Nama</th>
                        <!-- <th scope="col">Owner</th> -->
                        <th scope="col">Deskripsi</th>
