                        <!-- <th scope="col">Durasi Paket (Jam)</th> -->
                        <th scope="col">Ruang (Unit)</th>
                        <th scope="col">Aksi</th>
                      </tr>
                    </thead>
                    <tbody>

                      <% if(studios.length===0) { %>
                        <tr class="">
                          <!-- <td colspan="10" class="text-center">Tidak Ada Data</td> -->
