<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Detail Pemesanan</title>
  <meta content="" name="description">
  <meta content="" name="keywords">
  <base href="/">

  <!-- Favicons -->
  <link href="assets/img/favicon.png" rel="icon">
  <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap"
    rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="assets/css/frontSite-style.css" rel="stylesheet">

</head>

<body>

  <%- include('../../components/navbarClient') %>

  <main class="container my-5">
    <% if (!user) { %>
      <div class="text-center" style="height: 50vh">
        <h4>Silahkan login untuk melihat riwayat pemesanan studio</h4>
        <h1><a class="btn btn-primary" href="/auth/login">Login Sekarang</a></h1>
      </div>
    <% } else { %>
      <% if (reservations.length == 0) { %>
        <div class="text-center">
          <h2>Belum ada riwayat pemesanan studio</h2>
          <h1><a class="btn btn-primary" href="#">Silahkan Cari Studio Favorit Anda</a></h1>
        </div>
      <% } %>
      <% reservations.forEach(reservation => { %>
        <div class="card bg-body-secondary p-3 w-75 mx-auto my-3 shadow-sm">
          <div class="card-body d-flex  justify-content-between">
            <div>
              <p>ID Pemesanan : <%= reservation.id %></p>
              <h1><%= reservation.studio.name %></h1>
              <p class="fw-semibold mb-2">Sewa Studio untuk waktu pada <%= reservation.rentDate.toDateString() %></p>
              <div class="d-flex gap-5">
                <span class="d-flex gap-3 text-dark">
                  <i class="bi bi-building-fill-check"></i>
                  <p class="fw-semibold m-0">Ruang Studio <%= reservation.room %></p>
                </span>
                <span class="d-flex gap-3 text-dark">
                  <i class="bi bi-alarm-fill"></i>
                  <p class="fw-semibold m-0">Durasi Sewa <%= reservation.duration %> Jam</p>
                </span>
              </div>
              <span class="d-flex gap-3 <%= reservation.status == "PENDING" ? "text-warning-emphasis" : reservation.status == "AKTIF"
                ? "text-primary" : reservation.status == "DIBATALKAN" ? "text-danger" : reservation.status == "SELESAI" ? "text-success" : "text-dark"%> mt-3">
                <i class="bi bi-check-circle-fill"></i>
                <p class="fw-semibold text-uppercase">TIKET PEMESANAN <%= reservation.status %></p>
              </span>
              <a href="/detail-ticket/<%= reservation.id %>" class="d-flex gap-3 text-dark">
                <i class="bi bi-info-circle-fill"></i>
                <p class="fw-semibold m-0">Detail Tiket</p>
              </a>
            </div>
            <img class="rounded-3" src="<%= reservation.studio.image %>" alt="image-studio" width="225" height="225">
          </div>
        </div>
      <% }); %>
      <div class="card bg-body-secondary p-3 w-75 mx-auto my-3 shadow-sm">
        <div class="card-body d-flex  justify-content-between">
          <div>
            <p>ID Pemesanan : 835658d9-9e83-425d-844f-40bfbc60f082</p>
            <h1>Hanna Studio</h1>
            <p class="fw-semibold mb-2">Friday, 24 Aug 2024</p>
            <div class="d-flex gap-5">
              <span class="d-flex gap-3 text-dark">
                <i class="bi bi-building-fill-check"></i>
                <p class="fw-semibold">Ruang Studio 4</p>
              </span>
              <span class="d-flex gap-3 text-dark">
                <i class="bi bi-alarm-fill"></i>
                <p class="fw-semibold">Durasi Sewa (1 Jam)</p>
              </span>
            </div>
            <span class="d-flex gap-3 text-primary mt-3">
              <i class="bi bi-check-circle-fill"></i>
              <p class="fw-semibold text-uppercase">TIKET PEMESANAN AKTIF</p>
            </span>
          </div>
          <img class="rounded-3" src="https://forumkamera.com/wp-content/uploads/2023/04/Studio-Foto.jpg" alt="image-studio" width="225" height="225">
        </div>
      </div>
      <div class="card bg-body-secondary p-3 w-75 mx-auto my-3 shadow-sm">
        <div class="card-body d-flex  justify-content-between">
          <div>
            <p>ID Pemesanan : 835658d9-9e83-425d-844f-40bfbc60f082</p>
            <h1>Sinexins Studio</h1>
            <p class="fw-semibold mb-2">Wednesday, 22 Aug 2024</p>
            <div class="d-flex gap-5">
              <span class="d-flex gap-3 text-dark">
                <i class="bi bi-building-fill-check"></i>
                <p class="fw-semibold">Ruang Studio 4</p>
              </span>
              <span class="d-flex gap-3 text-dark">
                <i class="bi bi-alarm-fill"></i>
                <p class="fw-semibold">Durasi Sewa (1 Jam)</p>
              </span>
            </div>
            <span class="d-flex gap-3 text-success mt-3">
              <i class="bi bi-check-circle-fill"></i>
              <p class="fw-semibold text-uppercase">TIKET PEMESANAN SELESAI</p>
            </span>
          </div>
          <img class="rounded-3" src="https://forumkamera.com/wp-content/uploads/2023/04/Studio-Foto.jpg" alt="image-studio" width="225" height="225">
        </div>
      </div>
      <div class="card bg-body-secondary p-3 w-75 mx-auto my-3 shadow-sm">
        <div class="card-body d-flex  justify-content-between">
          <div>
            <p>ID Pemesanan : 835658d9-9e83-425d-844f-40bfbc60f082</p>
            <h1>Bomboy Studio</h1>
            <p class="fw-semibold mb-2">Tuesday, 19 Aug 2024</p>
            <div class="d-flex gap-5">
              <span class="d-flex gap-3 text-dark">
                <i class="bi bi-building-fill-check"></i>
                <p class="fw-semibold">Ruang Studio 3</p>
              </span>
              <span class="d-flex gap-3 text-dark">
                <i class="bi bi-alarm-fill"></i>
                <p class="fw-semibold">Durasi Sewa (3 Jam)</p>
              </span>
            </div>
            <span class="d-flex gap-3 text-danger mt-3">
              <i class="bi bi-check-circle-fill"></i>
              <p class="fw-semibold text-uppercase">TIKET PEMESANAN DIBATALKAN</p>
            </span>
          </div>
          <img class="rounded-3" src="https://sardanagroup.co.id/HP/production/images/news/Studio%20musik%20di%20Medan.jpg" alt="image-studio" width="225" height="225">
        </div>
      </div>
    <% } %>
  </main>
  
  <%- include('../../components/footerClient') %>

  <!-- Vendor JS Files -->
  <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Template Main JS File -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
  <script src="assets/js/index.js"></script>
</body>
</html>